<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinicapp.clinicsystem.DashboardController"
            prefWidth="700" prefHeight="450"
            style="-fx-background-color: #f3f5f7;">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-border-color: #e6e6e6; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="12" right="14" bottom="12" left="14"/>
            </padding>

            <Label text="Clinic System"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="lblWelcome" text="Welcome, Admin"
                   style="-fx-text-fill: #555;"/>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <Label text="Dashboard"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <!-- Cards row -->
            <HBox spacing="12">
                <!-- Patients card -->
                <VBox spacing="6" prefWidth="220"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0.1, 0, 2);">
                    <padding>
                        <Insets top="14" right="14" bottom="14" left="14"/>
                    </padding>
                    <Label text="Patients" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                    <Label fx:id="lblPatients" text="0"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Total registered patients"
                           style="-fx-text-fill: #777; -fx-font-size: 11px;"/>
                </VBox>

                <!-- Next visits card -->
                <VBox spacing="6" prefWidth="220"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0.1, 0, 2);">
                    <padding>
                        <Insets top="14" right="14" bottom="14" left="14"/>
                    </padding>
                    <Label text="Next Visits" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                    <Label fx:id="lblNextVisits" text="0"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Upcoming visits (not attended)"
                           style="-fx-text-fill: #777; -fx-font-size: 11px;"/>
                </VBox>

                <!-- Attended card -->
                <VBox spacing="6" prefWidth="220"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0.1, 0, 2);">
                    <padding>
                        <Insets top="14" right="14" bottom="14" left="14"/>
                    </padding>
                    <Label text="Attended" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                    <Label fx:id="lblAttended" text="0"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Visits marked as attended"
                           style="-fx-text-fill: #777; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- Actions -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Open Patients" onAction="#onOpenPatients"
                        style="-fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10 14;"/>
                <Button text="Refresh" onAction="#onRefresh"
                        style="-fx-background-radius: 10; -fx-padding: 10 14;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout"
                        style="-fx-background-radius: 10; -fx-padding: 10 14;"/>
            </HBox>

            <!-- Status -->
            <Label fx:id="lblStatus" text=""
                   style="-fx-text-fill: #555; -fx-font-weight: bold;"/>
        </VBox>
    </center>

</BorderPane>
