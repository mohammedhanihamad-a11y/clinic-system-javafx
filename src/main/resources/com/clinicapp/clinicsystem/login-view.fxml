<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinicapp.clinicsystem.LoginController"
            prefWidth="520" prefHeight="330">

    <!-- Background -->
    <center>
        <VBox spacing="14" alignment="CENTER" maxWidth="340"
              style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0.1, 0, 2);">
            <padding>
                <Insets top="22" right="22" bottom="22" left="22"/>
            </padding>

            <!-- Title -->
            <VBox spacing="4" alignment="CENTER">
                <Label text="Clinic System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Label text="School Project Login" style="-fx-text-fill: #666;"/>
            </VBox>

            <Separator/>

            <!-- Form -->
            <VBox spacing="10">
                <VBox spacing="6">
                    <Label text="Username" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtUsername" promptText="Enter username"
                               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 10;"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Password" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="txtPassword" promptText="Enter password"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 10;"/>
                </VBox>

                <Button text="Login"
                        onAction="#onLogin"
                        maxWidth="Infinity"
                        style="-fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 10;"/>
            </VBox>

            <!-- Hint / status -->
            <Label fx:id="lblStatus" text=""
                   style="-fx-font-weight: bold; -fx-text-fill: #cc0000;"/>

            <Label text="Default: admin / admin123"
                   style="-fx-text-fill: #777; -fx-font-size: 11px;"/>
        </VBox>
    </center>

    <!-- Page background color -->
    <style>
        .root {
        -fx-background-color: #f3f5f7;
        }
    </style>

</BorderPane>
