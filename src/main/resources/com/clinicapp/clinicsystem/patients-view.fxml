<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinicapp.clinicsystem.PatientsController"
            prefWidth="950" prefHeight="600">

    <top>
        <HBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="â¬… Back" onAction="#backDashboard"/>
            <Label text="Patients" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Table -->
            <TableView fx:id="tblPatients" prefHeight="260">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="90"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="160"/>
                    <TableColumn fx:id="colAge" text="Age" prefWidth="70"/>
                    <TableColumn fx:id="colLastVisit" text="Last Visit" prefWidth="180"/>
                    <TableColumn fx:id="colLastDiagnosis" text="Last Diagnosis" prefWidth="340"/>
                </columns>
            </TableView>

            <Separator/>

            <!-- Add Patient -->
            <Label text="Add New Patient" style="-fx-font-weight:bold;"/>
            <HBox spacing="10">
                <TextField fx:id="txtId" promptText="ID (P004)" prefWidth="120"/>
                <TextField fx:id="txtName" promptText="Name" prefWidth="160"/>
                <TextField fx:id="txtAge" promptText="Age" prefWidth="80"/>
                <Button text="Add Patient" onAction="#onAddPatient"/>
            </HBox>

            <Separator/>

            <!-- Visits -->
            <Label text="Visits (Select patient first)" style="-fx-font-weight:bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Date:"/>
                <DatePicker fx:id="dateVisit" prefWidth="180"/>

                <Label text="Time:"/>
                <Spinner fx:id="spHour" prefWidth="70"/>
                <Label text=":"/>
                <Spinner fx:id="spMinute" prefWidth="70"/>

                <Button text="Add Visit" onAction="#onAddVisit"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtDiagnosis" promptText="Diagnosis after attended" prefWidth="260"/>
                <Button text="Mark Attended + Save Diagnosis" onAction="#onMarkAttended"/>
            </HBox>

            <Label text="History:" style="-fx-font-weight:bold;"/>
            <TextArea fx:id="txtHistory" prefHeight="160"/>

            <Label fx:id="lblMsg" text=""/>
        </VBox>
    </center>

</BorderPane>
